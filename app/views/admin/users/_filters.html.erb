<details class="filters">
    <summary class="filters__control" aria-expanded="false">Filters</summary>

    <div class="filters__body">
        <%= form_for admin_users_url, method: "get", html: {class: "filters__form"} do |f| %>

            <%= hidden_field_tag "deactivated", params[:deactivated] %>

            <%= label_tag "filter_users", nil, class: "visually-hidden" %>
            <%= select_tag "filter_users", options_for_select([
                ["Only administrators", "admins"],
                ["Only community users", "community"],
            ], params[:filter_users]), include_blank: "All roles", class: "filters__select" %>

        <% end %>
    </div>
</details>