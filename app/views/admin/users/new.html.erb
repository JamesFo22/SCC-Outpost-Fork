<% content_for :header do %>
    <%= render "shared/dynamic-back-link", text: "Back to users", path: admin_users_path %>
    <h1 class="page-header__title two-thirds">Invite a new user</h1>
<% end %>

<%= form_for [:admin, @user], html: {class: "one-half"}, data: {warn_unsaved_changes: true} do |f| %>
    <%= render "shared/errors", model: @user %>
    <%= render "fields", f: f %>
    <div class="form-actions">
        <%= f.submit "Send invite", class: "button" %>
    </div>
<% end %>