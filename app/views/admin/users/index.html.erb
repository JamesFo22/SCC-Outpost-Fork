<% content_for :header do %>
    <h1 class="page-header__title">Users</h1>
<% end %>

<header class="actions">
  <%= render "shared/mini-search", path: admin_users_path %>
  <%= link_to "Invite user", new_admin_user_path, class: "button button--small" %>
</header>

<div class="table-holder">
  <table class="table">
    <thead>
      <tr>
        <th>Email</th>
        <th>Role</th>
        <th>Organisation</th>
        <th>Joined</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |u| %>
        <tr>
          <td>
            <%= u.email %>
          </td>
          <td>
            <% if u.admin %>
              <span class="admin-tag">Admin</span>
            <% else %>
              Community
            <% end %>
          </td>
          <td><%= link_to u.organisation.name, admin_organisation_path(u.organisation) if u.organisation %></td>
          <td><%= time_ago_in_words(u.created_at).humanize %> ago</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>