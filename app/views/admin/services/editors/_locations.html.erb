<%= mark_unapproved_array("locations") do %>
    <section class="repeater">
        <ul class="repeater__panels" aria-live="polite">
            <%= s.fields_for :locations do |l| %>
                <li class="repeater__panel">
                    <%= render "admin/services/editors/location-fields", l: l %>
                </li>
            <% end %>
        </ul>
        <%= link_to_add_fields "Add a location", s, :locations, "admin/services/editors/location-fields" %>
    </section>
<% end %>