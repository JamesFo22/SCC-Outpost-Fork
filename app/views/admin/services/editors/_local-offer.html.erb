<%= mark_unapproved_local_offer do %>
<div class="local-offer-editor" aria-live="polite">

    <div class="field">
        <div class="checkbox">
            <%= local_offer_checkbox(s, "admin/services/editors/local-offer-fields") %>
            <%= label_tag "local_offer", "This service is part of the local offer", class: "checkbox__label" %>
        </div>
    </div>

    <%= s.fields_for :local_offer do |l| %>
        <%= render "admin/services/editors/local-offer-fields", l: l %>
    <% end %>

</div>
<% end %>