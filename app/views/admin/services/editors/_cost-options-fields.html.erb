    <div class="field">
        <%= c.label :option, "Who is this fee for?", class: "field__label" %>
        <%= c.text_field :option, class: "field__input", placeholder: "eg. adults, under 16s" %>
    </div>

    <div class="field field--required">
        <%= c.label :amount, class: "field__label" %>
        <span class="field__prefix">Â£</span>
        <%= c.text_field :amount, class: "field__input field__input--with-prefix", step: "0.01", min: "0.00", required: true %>
    </div>
</div>
<%= c.hidden_field :_destroy,  data: {destroy_field: true} %>

