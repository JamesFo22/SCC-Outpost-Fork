        </div>
    </div>

    <div class="<%= mark_unapproved_field("pick_up_drop_off_service") %>">
        <div class="checkbox">
            <%= s.check_box :pick_up_drop_off_service, class: "checkbox__input"%>
            <%= s.label :pick_up_drop_off_service, "Offers a pick-up or drop-off service", class: "checkbox__label" %>
        </div>
    </div>

</div>