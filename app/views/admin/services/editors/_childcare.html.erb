<div class="field-section">
    <div class="field <%= mark_unapproved_field("bccn_member") %> checkbox">
        <%= s.check_box :bccn_member, class: "checkbox__input"%>
        <%= s.label :bccn_member, "BCCN Member", class: "checkbox__label" %>
    </div>

    <div class="field <%= mark_unapproved_field("current_vacancies") %> checkbox">
        <%= s.check_box :current_vacancies, class: "checkbox__input"%>
        <%= s.label :current_vacancies, "Has vacancies for new children", class: "checkbox__label" %>
    </div>

    <div class="field <%= mark_unapproved_field("pick_up_drop_off_service") %> checkbox">
        <%= s.check_box :pick_up_drop_off_service, class: "checkbox__input"%>
        <%= s.label :pick_up_drop_off_service, "Offers a pick-up or drop-off service", class: "checkbox__label" %>
    </div>
</div>