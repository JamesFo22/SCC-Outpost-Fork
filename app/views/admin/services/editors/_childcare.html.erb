    <div class="<%= mark_unapproved_field("bccn_member") %>">
      <div class="checkbox">
        <%= s.check_box :bccn_member, class: "checkbox__input"%>
        <%= s.label :bccn_member, "BCCN Member", class: "checkbox__label" %>
      </div>
    </div>

    <div class="<%= mark_unapproved_field("current_vacancies") %>">
        <div class="checkbox">
            <%= s.check_box :current_vacancies, class: "checkbox__input"%>
