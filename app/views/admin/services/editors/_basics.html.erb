<div class="field-section field-section--two-cols">
    <div class="field">
        <%= s.label :name, class: "field__label" %>
        <%= s.text_field :name, value: @service.name, class: "field__input" %>
    </div>

    <div class="field">
        <%= s.label :organisation_id, "Parent organisation", class: "field__label" %>
        <%= s.collection_select( :organisation_id, Organisation.all, :id, :display_name, {}, class: "field__input", data: {choices: true})%>
    </div>

    <div class="field field--span-two-cols">
        <%= s.label :description, class: "field__label" %>
        <%= s.text_area :description, value: @service.description, class: "field__input", rows: 4 %>
    </div>
</div>

<div class="field-section field-section--two-cols">
    <h3 class="field field--span-two-cols">Contact details</h3>

    <div class="field">
        <%= s.label :email, class: "field__label" %>
        <%= s.text_field :email, value: @service.email, class: "field__input" %>
    </div>

    <div class="field">
        <%= s.label :url, "Website", class: "field__label" %>
        <%= s.text_field :url, value: @service.url, class: "field__input" %>
    </div>

    <%= s.fields_for :contacts do |c| %>

        <%= c.fields_for :phones do |x| %>
            <div class="field">
                <%= x.label :number, "Phone", class: "field__label" %>
                <%= x.text_field :number, class: "field__input" %>
            </div>
        <% end %>

    </div>
    <div class="field-section field-section--two-cols">
        <h3 class="field field--span-two-cols">Point of contact</h3>


        <div class="field">
            <%= c.label :name, "Their name", class: "field__label" %>
            <%= c.text_field :name, class: "field__input" %>
        </div>

        <div class="field">
            <%= c.label :title, "Their role", class: "field__label" %>
            <%= c.text_field :title, class: "field__input" %>
        </div>

    </div>
    <% end %>


