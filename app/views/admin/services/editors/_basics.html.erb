<div class="field-section field-section--two-cols">
    <div class="field field--required">
        <%= s.label :name, class: "field__label" %>
        <%= s.text_field :name, value: @service.name, class: "field__input", required: true %>
    </div>

    <div class="field field--required">
        <%= s.label :organisation_id, "Parent organisation", class: "field__label" %>
        <%= s.collection_select( :organisation_id, Organisation.all, :id, :display_name, {}, class: "field__input", data: {choices: true})%>
    </div>

    <div class="field field--span-two-cols" data-word-count="true">
        <%= s.label :description, class: "field__label" %>
        <%= s.text_area :description, value: @service.description, class: "field__input", rows: 5 %>
        <div class="field__footer">
            <p class="field__lower-hint">Descriptions over 30 words may be shortened</p>
            <span class="field__word-counter"></span>
        </div>
    </div>

    <div class="field checkbox">
        <%= s.check_box :needs_referral, class: "checkbox__input"%>
        <%= s.label :needs_referral, "This service needs referral?", class: "checkbox__label" %>
    </div>
</div>

<div class="field-section field-section--two-cols">
    <h3 class="small-bottom-margin">Links</h3>
    <p class="field-section__hint">All must start with http:// or https://</p>

    <div class="field field--span-two-cols">
        <%= s.label :url, "Website", class: "field__label" %>
        <%= s.url_field :url, class: "field__input" %>
    </div>
    
    <div class="field">
        <%= s.label :facebook_url, "Facebook URL", class: "field__label" %>
        <%= s.url_field :facebook_url, class: "field__input" %>
    </div>

    <div class="field">
        <%= s.label :twitter_url, "Twitter URL", class: "field__label" %>
        <%= s.url_field :twitter_url, class: "field__input" %>
    </div>

    <div class="field">
        <%= s.label :youtube_url, "Youtube URL", class: "field__label" %>
        <%= s.url_field :youtube_url, class: "field__input" %>
    </div>

</div>

