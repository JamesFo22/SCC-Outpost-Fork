<%= mark_unapproved_array("cost_options") do %>

    <div class="field field--span-two-cols <%= mark_unapproved_field("free") %>">
        <div class="checkbox">
        <%= s.check_box :free, class: "checkbox__input"%>
        <%= s.label :free, class: "checkbox__label" do %>
            This service is free to use
        <% end %>
        </div>
    </div>

    <section class="repeater">
        <ul class="repeater__panels" aria-live="polite">
            <%= s.fields_for :cost_options do |c| %>
                <li class="repeater__panel">
                    <%= render "admin/services/editors/cost-options-fields", c: c %>
                </li>
            <% end %>
        </ul>
        <%= link_to_add_fields "Add a fee", s, :cost_options, "admin/services/editors/cost-options-fields" %>
    </section>
<% end %>