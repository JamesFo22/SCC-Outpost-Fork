<% content_for :header do %>
    <%= link_to "Back to services", admin_services_path, class: "go-back" %>
    <h1 class="page-header__title">Locations</h1>
<% end %>

<header class="actions">
  <div class="actions__group">
    <%= render "shared/mini-search", path: admin_locations_path %>
    <%= render "filters" %>
  </div>
  <div class="actions__group">
    <%= link_to "Add location", new_admin_location_path, class: "button button--small" %>
  </div>
</header>

<% if @locations.present? %>
  <div class="table-holder">
    <table class="table">
      <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Town or area</th>
            <th>Postcode</th>
            <th>Services</th>
        </tr>
      </thead>
      <tbody>
        <% @locations.each do |l| %>
          <tr>
            <td><%= link_to l.display_name, admin_location_path(l) %></td>
            <td><%= l.address_1 %></td>
            <td><%= l.city %></td>
            <td><%= l.postal_code %></td>
            <td><%= l.services.count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
    <%= paginate @locations %>
<% else %>
  <p class="no-results">No locations to show.</p>
<% end %>