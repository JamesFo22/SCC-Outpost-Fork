<div class="field-group field-group--two-cols">
    <div class="field">
        <%= f.label :name, "Venue or building name", class: "field__label" %>
        <%= f.text_field :name, class: "field__input" %>
    </div>

    <div class="field">
        <%= f.label :address_1, "Street address", class: "field__label" %>
        <%= f.text_field :address_1, class: "field__input" %>
    </div>

    <div class="field">
        <%= f.label :city, "Town or area", class: "field__label" %>
        <%= f.text_field :city, class: "field__input" %>
    </div>

    <div class="field">
        <%= f.label :state_province, "County", class: "field__label" %>
        <%= f.text_field :state_province, class: "field__input" %>
    </div>

    <div class="field field--required">
        <%= f.label :postal_code, "Postcode", class: "field__label" %>
        <p class="field__hint">Coordinates are automatically calculated from postcode</p>
        <%= f.text_field :postal_code, class: "field__input", required: true %>
    </div>
</div>

<%= f.hidden_field :country, value: "GB" %>

<div class="field-group field-group--no-top-margin field-group--two-cols">
    <div class="field">
        <%= f.label :latitude, class: "field__label" %>
        <%= f.text_field :latitude, class: "field__input", disabled: true %>
    </div>
    <div class="field">   
        <%= f.label :longitude, class: "field__label" %>
        <%= f.text_field :longitude, class: "field__input", disabled: true %>
    </div>
</div>

<div class="field-section">
    <div class="field checkbox">
        <%= f.check_box :visible, class: "checkbox__input"%>
        <%= f.label :visible, "Make this location publicly visible", class: "checkbox__label" %>
    </div>
    <div class="field checkbox">
        <%= l.check_box :preferred_for_post, class: "checkbox__input"%>
        <%= l.label :preferred_for_post, "Use this address for post", class: "checkbox__label" %>
    </div>
    <div class="field checkbox">
        <%= f.check_box :mask_exact_address, class: "checkbox__input"%>
        <%= f.label :mask_exact_address, "Hide the exact street address", class: "checkbox__label"  do %>
            Hide the exact street address
            <button class="help-button help-button--small" type="button" data-tippy-content="If checked, only the first part of the postcode will be publicly visible, and the map pin will be less precise.">What does this mean?</button>
        <% end %>
    </div>
</div>