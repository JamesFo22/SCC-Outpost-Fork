<section class="mini-version-history collapsible" id="ofsted-version-history">
  <button class="collapsible__header" aria-expanded="true">
    <h2>History</h2>
  </button>
  <div class="collapsible__content">

    <%#= link_to "See full history", admin_service_snapshots_path(@service), class: "collapsible__action" %>
    
    <% if @versions.present? %>
      <ul class="stepper <%= "stepper--summarised" if @item.versions.length > 4 %>">
          <% @versions.each do |v| %>
              <li class="stepper__step <%= stepper_class(v.event) %>">
                  <div>
                    <%= pretty_event(v.event)&.humanize %>
                  </div>
                  <p class="stepper__time">
                    <%= time_ago_in_words(v.created_at).humanize %> ago
                  </p>
              </li>
          <% end %>
      </ul>
    <% else %>
      <p class="no-results">No versions to show</p>
    <% end %>

  </div>
</section>