<% content_for :header do %>
    <h1 class="page-header__title">Ofsted feed</h1>
    <%= render "shortcut-nav" %>
<% end %>


<% if @requests.present? %>
  <ul class="pending-list">
    <% @requests.each do |s| %>
      <li class="pending-panel">
        <div>
          <h2><%= link_to s.setting_name.truncate(25), admin_ofsted_path(s) %></h2>
          <p>
            <%= time_ago_in_words(s.updated_at).humanize %> ago
          </p>
        </div>
        <% if s.status === "new" %>
            <div class="pending-status pending-status--new">
                <strong>New provider</strong>
            </div>
        <% elsif s.status === "deleted"%>
            <div class="pending-status pending-status--deleted">
                <strong>Deleted</strong>
            </div>
        <% else %>
            <div class="pending-status">
            <strong>Changed</strong>
            <p><%= s.versions.last.changeset.map{ |key, value| key.humanize }.join(", ") %></p>
            </div>
        <% end %>
        <%= link_to "Dismiss", admin_ofsted_dismiss_path(s), method: "put", class: "button" %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p class="no-results  no-results--big">Nothing pending right now</p>
<% end %>