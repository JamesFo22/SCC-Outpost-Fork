<% if t.present? %>
    <table class="table">
        <thead>
          <th>Category</th>
          <th>Start date</th>
          <th>End date</th>
        </thead>
        <tbody>
            <% t.each do |r| %>
            <tr>
              <td><%= r["category"] %></td>
              <td><%= format_if_date(r["start_date"]) %></td>
              <td><%= format_if_date(r["end_date"]) %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
<% else %>
    <p class="no-results">Nothing to show</p>
<% end %>