<% content_for :header do %>    
    <%= link_to "Back to raw feed", admin_ofsted_index_path, class: "go-back" %>
    <div class="page-header__actions">
      <h1 class="page-header__title two-thirds"><%= @item.setting_name %></h1>
    </div>
<% end %>

<div class="with-sidebar">

  <div class="two-thirds">

      <section class="collapsible" id="ofsted-basics">
        <button class="collapsible__header">
          <h2>Basics</h2>
        </button>
        <div class="collapsible__content">
          <div class="field-section field-section--two-cols">
            <%= render "admin/ofsted/field", label: "Setting name", value: @item.setting_name %>
            <%= render "admin/ofsted/field", label: "Provider name", value: @item.provider_name %>
            <%= render "admin/ofsted/field", label: "Reference number", value: @item.reference_number %>
            <%= render "admin/ofsted/field", label: "Status", value: @item.registration_status %>
            <%= render "admin/ofsted/field", label: "Registration date", value: @item.registration_date %>
          </div>

          <div class="field-section field-section--two-cols">
            <%= render "admin/ofsted/field", label: "Provision type", value: @item.provision_type %>
            <%= render "admin/ofsted/field", label: "Secondary provision type", value: @item.secondary_provision_type %>
          </div>

          <div class="field-section field-section--two-cols">
            <%= render "admin/ofsted/field", label: "Special consideration", value: @item.special_consideration %>
            <%= render "admin/ofsted/field", label: "Ofsted report", value: @item.link_to_ofsted_report %>
            <%= render "admin/ofsted/field", label: "Registered person reference", value: @item.rp_reference_number %>
            <%= render "admin/ofsted/field", label: "Related RPPs", value: @item.related_rpps %>
          </div>
        </div>
      </section>

      <section class="collapsible" id="ofsted-setting">
        <button class="collapsible__header">
          <h2>Setting</h2>
        </button>
        <div class="collapsible__content">
          <div class="field-section field-section--two-cols">
            <%= render "admin/ofsted/field", label: "Street address 1", value: @item.setting_address_1 %>
            <%= render "admin/ofsted/field", label: "Street address 2", value: @item.setting_address_2 %>
            <%= render "admin/ofsted/field", label: "Village/town", value: @item.setting_villagetown %>
            <%= render "admin/ofsted/field", label: "Town", value: @item.setting_town %>
            <%= render "admin/ofsted/field", label: "County", value: @item.setting_county %>
            <%= render "admin/ofsted/field", label: "Postcode", value: @item.setting_postcode %>
          </div>
          <div class="field-section field-section--two-cols">
            <%= render "admin/ofsted/field", label: "Telephone", value: @item.setting_telephone %>
            <%= render "admin/ofsted/field", label: "Fax", value: @item.setting_fax %>
            <%= render "admin/ofsted/field", label: "Email", value: @item.setting_email %>
          </div>
          <div class="field-section field-section--two-cols">
            <%= render "admin/ofsted/field", label: "Ward", value: @item.location_ward %>
            <%= render "admin/ofsted/field", label: "Primary planning area", value: @item.location_planning %>
          </div>
        </div>
      </section>

      <section class="collapsible" id="ofsted-provider">
        <button class="collapsible__header">
          <h2>Provider</h2>
        </button>
        <div class="collapsible__content">
          <div class="field-section field-section--two-cols">
            <%= render "admin/ofsted/field", label: "Street address 1", value: @item.prov_address_1 %>
            <%= render "admin/ofsted/field", label: "Street address 2", value: @item.prov_address_2 %>
            <%= render "admin/ofsted/field", label: "Village/town", value: @item.prov_villagetown %>
            <%= render "admin/ofsted/field", label: "Town", value: @item.prov_town %>
            <%= render "admin/ofsted/field", label: "County", value: @item.prov_county %>
            <%= render "admin/ofsted/field", label: "Postcode", value: @item.prov_postcode %>
          </div>
          <div class="field-section field-section--two-cols">
            <%= render "admin/ofsted/field", label: "Telephone", value: @item.prov_telephone %>
            <%= render "admin/ofsted/field", label: "Work telephone", value: @item.prov_work_telephone %>
            <%= render "admin/ofsted/field", label: "Mobile", value: @item.prov_mobile %>
            <%= render "admin/ofsted/field", label: "Fax", value: @item.prov_fax %>
            <%= render "admin/ofsted/field", label: "Email", value: @item.prov_email %>
          </div>
          <div class="field-section field-section--two-cols">
            <div class="checkbox">
              <%= check_box_tag "consent_witheld", "", @item.prov_consent_withheld, class: "checkbox__input", disabled: true %>
              <%= label_tag "consent_witheld", "Consent withheld?", class: "checkbox__label" %>
            </div>
          </div>
        </div>
      </section>

      <section class="collapsible" id="ofsted-others">
        <button class="collapsible__header">
          <h2>Everything else</h2>
        </button>
        <div class="collapsible__content">

            <div class="tabs">
                <ul class="tabs__nav">
                  <li class="tabs__nav-item">
                    <a href="#childcare-period" class="tabs__nav-link">Childcare period</a>
                  </li>
                  <li class="tabs__nav-item">
                    <a href="#registration-history" class="tabs__nav-link">Registration history</a>
                  </li>
                  <li class="tabs__nav-item">
                    <a href="#childcare-services-register" class="tabs__nav-link">Childcare services register</a>
                  </li>
                  <li class="tabs__nav-item">
                    <a href="#certificate-conditions" class="tabs__nav-link">Certificate conditions</a>
                  </li>
                  <li class="tabs__nav-item">
                    <a href="#childcare-ages" class="tabs__nav-link">Childcare ages</a>
                  </li>
                  <li class="tabs__nav-item">
                    <a href="#inspections" class="tabs__nav-link">Inspections</a>
                  </li>
                  <li class="tabs__nav-item">
                    <a href="#notice-history" class="tabs__nav-link">Notice history</a>
                  </li>
                  <li class="tabs__nav-item">
                    <a href="#welfare-notice-history" class="tabs__nav-link">Welfare notice history</a>
                  </li>
                  <li class="tabs__nav-item">
                    <a href="#links-registrations" class="tabs__nav-link">Linked registrations</a>
                  </li>
                </ul>

                <div class="tabs__panel" id="childcare-period">
                  <% if @item.childcare_period.any? %>
                    <ul class="big-list">
                      <% @item.childcare_period.each do |r| %>
                        <li class="big-list__item"><%= r %></li>
                      <% end %>
                    </ul>
                  <% else %>
                    <p class="no-results">Nothing to show</p>
                  <% end %>
                </div>
                <div class="tabs__panel" id="registration-history"></div>
                <div class="tabs__panel" id="childcare-services-register"></div>
                <div class="tabs__panel" id="certificate-conditions"></div>
                <div class="tabs__panel" id="childcare-ages"></div>
                <div class="tabs__panel" id="inspections"></div>
                <div class="tabs__panel" id="notice-history"></div>
                <div class="tabs__panel" id="welfare-notice-history"></div>
                <div class="tabs__panel" id="links-registrations"></div>
            </div>

        </div>
      </section>

  </div>
  <aside class="with-sidebar__sidebar">

      <section class="collapsible" id="ofsted-history">
        <button class="collapsible__header">
          <h2>History</h2>
        </button>
        <div class="collapsible__content">
          <div class="field-section field-section--two-cols">
          </div>
        </div>
      </section>

  </aside>
</div>