<% if params[:order_by] === column %>
    <% if params[:order] === "asc" %>

        <%= link_to admin_ofsted_index_path(@query.merge(:order => "desc", :order_by => column)), class: "sort" do %>
            <%= label %> <%= image_tag("asc-active.svg", alt: "Sort descending") %>
        <% end %>
        
    <% else %>

        <%= link_to admin_ofsted_index_path(@query.merge(:order => nil, :order_by => nil)), class: "sort" do %>
            <%= label %> <%= image_tag("desc-active.svg", alt: "Stop sorting") %>
        <% end %>

    <% end %>
<% else %>

    <%= link_to admin_ofsted_index_path(@query.merge(:order => "asc", :order_by => column)), class: "sort" do %>
        <%= label %>
    <% end %>

<% end %>