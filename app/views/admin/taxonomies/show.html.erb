<% content_for :header do %>
    <%= link_to "Back to categories", admin_taxonomies_path, class: "go-back" %>
    <div class="page-header__actions">
      <h1 class="page-header__title two-thirds"><%= @taxonomy.name %></h1>
    </div>
<% end %>

<div class="two-panels">

  <div class="panel">
    <%= form_for [:admin, @taxonomy] do |s| %>
      <%= render "shared/errors", model: @taxonomy %>
      <div class="field-section">
        <%= render "fields", s: s %>
      </div>
      <div class="form-actions">
        <%= s.submit "Update", class: "button" %>
        <%= link_to "Delete category", admin_taxonomy_path(@taxonomy), method: "delete", class: "button button--danger", data: {confirm: "Are you sure you want to delete this category and any children? This can't be undone." } %>
      </div>
    <% end %>
  </div>

  <div class="panel">
      <div class="collapsible" id="taxonomy-services-list">
        <button class="collapsible__header">
          <h2>
            Services
            <span class="collapsible__header-count">(<%= @taxonomy.services.count %>)</span>
          </h2>
        </button>
        <div class="collapsible__content">
          <% if @taxonomy.services.present? %>  
            <ul class="big-list">
              <% @taxonomy.services.each do |s| %>
                <li class="big-list__item">
                  <%= render "shared/poppables/service", s: s %>
                </li>
              <% end %>
            </ul>
          <% else %>
            <p class="no-results">This category has no services.</p>
          <% end %>
        </div>
      </div>
  </div>

</div>
