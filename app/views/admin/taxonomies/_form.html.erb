<%= form_for [:admin, @taxonomy], html: {class: "two-thirds"} do |s| %>

  <% if @taxonomy.errors.full_messages.any? %>
    <div class="error">
      <h2 class="error__title">Errors stopped this category being saved:</h2>
      <ul class="error__list">
        <% @taxonomy.errors.full_messages.each do |e| %>
          <li><%= e %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <div class="field-section">
        <div class="field">
            <%= s.label :name, class: "field__label" %>
            <%= s.text_field :name, value: @taxonomy.name, class: "field__input" %>
        </div>

        <div class="field">
            <%= s.label :parent_id, "Parent", class: "field__label" %>
            <%= s.collection_select( :parent_id, @possible_parents, :id, :name, {include_blank: ""}, class: "field__input")%>
        </div>
    </div>

    <% if params[:id] %>
      <%= s.submit "Update", class: "button" %>
    <% else %>
      <%= s.submit "Create", class: "button" %>
    <% end %>

<% end %>