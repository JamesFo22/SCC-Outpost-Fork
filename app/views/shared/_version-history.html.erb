<section class="version-history collapsible" id="version-history">
  <button class="collapsible__header" aria-expanded="true">
    <h2>Change history</h2>
  </button>
  <div class="collapsible__content">
    
    <% if @versions.present? %>
      <ul class="stepper">
          <% @versions.each do |v| %>
              <li class="stepper__step <%= "stepper__step--solid" if v.event === ("import" || "create") %>">
                  <p>
                    <%= pretty_event(v.event) %>
                    <% if v.whodunnit.present? %>
                      by <strong><%= User.find(v.whodunnit).email %></strong>
                    <% end %>
                  </p>
                  <p class="stepper__time">
                    <%= time_ago_in_words(v.created_at).humanize %> ago
                  </p>
              </li class="stepper__step">
          <% end %>
      <ul>
    <% end %>

  </div>
</section>