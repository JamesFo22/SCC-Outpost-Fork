<section class="mini-version-history collapsible" id="version-history">
  <button class="collapsible__header" aria-expanded="true">
    <h2>History</h2>
  </button>
  <div class="collapsible__content">

    <%= link_to "See full history", admin_service_versions_path(@service), class: "mini-version-history__action" %>
    

    <% if @versions.present? %>
      <ul class="stepper <%= "stepper--summarised" if @service.versions.length > 4 %>">
          <% @versions.each do |v| %>
              <li class="stepper__step <%= stepper_class(v.event) %>">
                  <p>
                    <%= pretty_event(v.event).humanize %>
                    <% if v.whodunnit.present? %>
                      by <strong><%= User.find(v.whodunnit).email %></strong>
                    <% end %>
                  </p>
                  <p class="stepper__time">
                    <%= time_ago_in_words(v.created_at).humanize %> ago
                  </p>
              </li>
          <% end %>
      </ul>
    <% end %>

  </div>
</section>