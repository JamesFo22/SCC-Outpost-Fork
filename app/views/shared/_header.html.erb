    <header class="site-header">
      <div class="<%= "container" unless full_width %> site-header__inner">
        <div class="site-header__masthead">
          <%= link_to image_tag("logo.svg", alt: "Buckinghamshire Council", class: "site-header__logo"), root_path, class: "site-header__logo-link" %>
        </div>
        <% if user_signed_in? %>
          <div class="site-header__actions">
            <span class="site-header__username"><%= current_user.display_name %></span>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "site-header__link" %>
          </div>
        <% end %>
        <nav class="site-header__service-name-holder">
          <a href="#" class="site-header__service-name">Family information service</a>
          <strong class="site-header__phase-tag">Beta</strong>
        </nav>
      </div>
    </header>