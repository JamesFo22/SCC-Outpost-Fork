<% content_for :header do %>
    <h1 class="page-header__title"><%= @organisation.name %></h1>
<% end %>

<header class="actions">
    <div>
    </div>
    <div>
        <%= link_to "Edit organisation", "", class: "button button--inline" %>
        <%= link_to "Add service", "", class: "button button--small" %>
    </div>
</header>

<div class="two-panels">
  <section class="panel">
    <h2 class="panel__title">Services</h2>
    <% if @organisation.services.present? %>
      <table class="table">
          <thead>
            <tr>
              <th>Name</th>
            </tr>
          </thead>
          <tbody>
            <% @organisation.services.each do |s| %>
              <tr>
                <td><%= link_to s.name, admin_service_path(s) %></td>
              </tr>
            <% end %>
          </tbody>
      </table>
    <% else %>
      <p class="no-results">This organisation has no services.</p>
    <% end %>
  </section>

  <section class="panel">
    <h2 class="panel__title">Users</h2>
    <% if @organisation.users.present? %>
      <table class="table">
          <thead>
            <tr>
              <th>Email</th>
            </tr>
          </thead>
          <tbody>
            <% @organisation.users.each do |u| %>
              <tr>
                <td><%= u.email %></td>
              </tr>
            <% end %>
          </tbody>
      </table>
    <% else %>
      <p class="no-results">This organisation has no users.</p>
    <% end %>
  </section>
</div>