<% content_for :header do %>
    <p class="page-header__caption">My organisation</p>
    <h1 class="page-header__title"><%= @organisation.name || Dashboard %></h1>
<% end %>

<header class="actions">
    <div>
    </div>
    <div>
        <%= link_to "Edit organisation", edit_organisation_path(@organisation), class: "button button--inline" %>
        <%= link_to "Invite new user", new_member_path, class: "button button--inline" %>
        <%= link_to "Add service", new_service_path, class: "button button--small" %>
    </div>
</header>

<div class="two-panels">
  <section class="panel">
    <h2 class="panel__title">Your services</h2>
    <% if @organisation.services.present? %>
      <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Last updated</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <% @organisation.services.each do |s| %>
              <tr>
                <td><%= link_to s.name, service_path(s) %></td>
                <td><%= time_ago_in_words(s.updated_at).humanize %> ago</td>
                <td><span class="tag"><%= s.status %></span></td>
              </tr>
            <% end %>
          </tbody>
      </table>
    <% else %>
      <p class="no-results">This organisation has no services.</p>
    <% end %>
  </section>

  <section class="panel">
    <h2 class="panel__title">Users</h2>
    <% if @organisation.users.present? %>
      <table class="table">
          <thead>
            <tr>
              <th>Email</th>
              <th>Created</th>
              <th class="visually-hidden">Actions</td>
            </tr>
          </thead>
          <tbody>
            <% @organisation.users.each do |u| %>
              <tr>
                <td><%= u.email %></td>
                <td><%= time_ago_in_words(u.created_at).humanize %> ago</td>
                <td><%= link_to "Remove", member_path(u), method: "delete", data: {confirm: "Are you sure you want to remove this user? They won't be able to log in any more"} %></td>
              </tr>
            <% end %>
          </tbody>
      </table>
    <% else %>
      <p class="no-results">This organisation has no users.</p>
    <% end %>
  </section>
</div>