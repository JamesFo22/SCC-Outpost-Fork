<% content_for :title do %>Scheduling | <% end %>

<% content_for :header do %>
    <%= link_to "Go back", service_path(@service), class: "go-back" %>
    <h1 class="page-header__title two-thirds">Opening times</h1>
    <p class="page-header__lede">Adding opening times helps people understand when your service runs.</p>
<% end %>

<%= form_with model: @service, url: service_path(@service, :section => params[:section]), html: {class: "two-thirds"} do |s| %>
    <%= render "shared/errors", model: @service %>
    <%= render "admin/services/editors/regular-schedule", s: s %>

    <div class="form-actions">
        <button class="button">Continue</button>
    </div>
<% end %>