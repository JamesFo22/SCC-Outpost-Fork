<% content_for :title do %>Fees | <% end %>

<% content_for :header do %>
    <%= link_to "Go back", service_path(@service), class: "go-back" %>
    <h1 class="page-header__title two-thirds">Fees</h1>
    <p class="page-header__lede">Help people understand what your service costs.</p>
<% end %>

<%= form_with model: @service, url: service_path(@service, :section => params[:section]), html: {class: "two-thirds"} do |s| %>

    <%= render "admin/services/editors/cost-options", s: s %>

    <div class="form-actions">
        <button class="button">Continue</button>
    </div>
<% end %>