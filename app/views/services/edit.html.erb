<% content_for :title do %>Edit a service |
<% end %>

<%= form_for @service, html: {class: "two-thirds"}, data: {warn_unsaved_changes: true} do |form| %>
  <%= hidden_field_tag 'stage', @stage %>
  <% if service_creation_steps.include? @stage %>
    <%= render "edit_#{@stage.parameterize.underscore}", form: form %>
  <% end %>
<% end %>