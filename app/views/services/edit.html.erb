<% content_for :title do %>Edit a service |
<% end %>

<% content_for :header do %>
  <% if service_creation_steps.index(@stage) == 0 %>
    <%= link_to "Go back", organisations_path, class: "go-back" %>
    <% else %>
    <%= link_to "Go back", edit_service_path(@service, :stage => prev_stage(@stage)), class: "go-back" %>
  <% end %>
  <h1 class="page-header__title"><%= "Edit Service #{@stage.titleize}" %></h1>
<% end %>

<ul class="list-unstyled multi-steps">
  <% service_creation_steps.each do |step| %>
    <li class="<%= 'is-active' if @stage == step %>"><%= step %></li>
  <% end %>
</ul>

<%= form_for @service do |form| %>
  <%= hidden_field_tag 'stage', @stage %>
  <% if service_creation_steps.include? @stage %>
    <%= render "edit_#{@stage.parameterize.underscore}", form: form %>
  <% end %>
<% end %>