<% content_for :header do %>
  <%= link_to "Go back", root_path, class: "go-back" %>
  <h1 class="page-header__title">Reset password</h1>
  <p class="page-header__lede one-half">To reset your password, we need to send you an email. If you have other problems logging in, <a href="#">contact us</a>.</p>
<% end %>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "shared/errors", model: resource %>

  <div class="field one-half">
    <%= f.label :email, "Your account email", class: "field__label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field__input", value: params[:email] %>
  </div>

  <div class="form-actions">
    <%= f.submit "Continue", class: "button" %>
  </div>
<% end %>