<% content_for :header do %>
    <%= link_to "Back to login", root_path, class: "go-back" %>
    <h1 class="page-header__title two-thirds">Change your password</h1>
<% end %>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field-section">
    <div class="field one-third">
      <%= f.label :password, "New password", class: "field__label" %>
      <p class="field__hint">At least 8 characters, including at least one uppercase character and a number.</p>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "field__input" %>
    </div>

    <div class="field one-third">
      <%= f.label :password_confirmation, "Confirm new password", class: "field__label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "field__input" %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Change my password", class: "button" %>
  </div>
<% end %>
