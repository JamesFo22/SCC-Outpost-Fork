<header class="page-header">
  <div class="container">
    <h1 class="page-header__title">Log in</h1>
  </div>
</header>

<div class="page-content">
  <div class="container">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "one-third"} ) do |f| %>
    <div class="field">
      <%= f.label :email, class: "field__label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field__input" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "field__label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "field__input" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field checkbox">
        <%= f.check_box :remember_me, class: "checkbox__input" %>
        <%= f.label :remember_me, class: "checkbox__label" %>
      </div>
    <% end %>

    <%= f.submit "Log in", class: "button button--with-bottom-margin" %>
  <% end %>

  <%= render "devise/shared/links" %>

  </div>
</div>
