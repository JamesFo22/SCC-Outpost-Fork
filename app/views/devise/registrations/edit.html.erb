<% content_for :header do %>
    <h1 class="page-header__title">Your profile</h1>
<% end %>

<div class="two-thirds">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "shared/errors", model: resource %>

      <div class="field-group field-group--two-cols">
        <div class="field field--required">
            <%= f.label :first_name, class: "field__label" %>
            <%= f.text_field :first_name, class: "field__input" %>
        </div>

        <div class="field field--required">
            <%= f.label :last_name, class: "field__label" %>
            <%= f.text_field :last_name, class: "field__input" %>
        </div>
      </div>

      <div class="field field--required field--span-two-cols">
        <%= f.label :email, class: "field__label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field__input" %>
      </div>

      <div class="field field--required">
        <%= f.label :current_password, class: "field__label" %>
        <p class="field__hint">We need your current password to confirm your changes.</p>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "field__input" %>
      </div>

      <div class="field-group">

        <h2 class="field-group__legend">Change your password</h2>
        <p class="field-group__hint">Leave blank if you don't want to change it. <% if @minimum_password_length %><%= @minimum_password_length %> characters minimum.<% end %></p>

        <div class="field">
          <%= f.label :password, class: "field__label" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "field__input" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, class: "field__label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "field__input" %>
        </div>
      </div>

      <div class="form-actions">
        <%= f.submit "Update", class: "button" %>
      </div>
    <% end %>

  <section class="danger-zone">
    <h2>Deactivate account</h2>
    <p>This can't be undone. You won't be able to log in any more and you'll lose the ability to make edits to any of your listed services.</p> 
    <%= button_to "Deactivate", member_path(resource), data: { confirm: "Are you sure you want to deactivate your account? This isn't reversible." }, method: :delete, class: "button button--danger" %></p>
  </section>
</div>